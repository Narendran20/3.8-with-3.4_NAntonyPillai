<script>

$("#slideshow > div:gt(0)").hide(); <!-- get its the images from slideshow > div and orders them using gt:() function, 0 is the first image and 1 is the second image -->
setInterval(function() { <!-- sets display time for each image -->
  $('#slideshow > div:first') <!-- setting and selecting the first image to display -->
    .fadeOut(1000) <!-- fade out the current image in 1000 milliseconds -->
    .next() <!-- bring in the next image -->
    .fadeIn(1000) <!-- fade in the next image in 1000 milliseconds -->
    .end() <!-- repeats the slideshow -->
    .appendTo('#slideshow'); <!-- appending the css data -->
}, 3000); <!-- this is how long the image displays to the user until the next image displays -->

</script>
